{
  "name": "docker-image-manager",
  "version": "1.0.0",
  "description": "Docker Image Manager with GitHub Container Registry integration",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "type-check": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "dockerode": "^4.0.9",
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/dockerode": "^3.3.47"
  },
  "module": "src/index.ts",
  "type": "module"
}
